<div class="jumbotron">
    <div class="container">
        <h1 class="text-center">{{bookshelf.users.name}}'s Bookshelves</h1>
    </div>
  
    <form id='searchForm' action="/Bookshelves" method="POST" class='form'>
    <input id="searchBooks" type="text" placeholder="Title or Author" name="searchTerm"></input>
    <input type="submit" value="Submit"></form>

   <ul class="list-group list-group-flush">
    
    {{#each book }}
    <h2>{{this.title}}</h2>
    <h3>{{this.description}}</h3>
    <h3>{{this.pages}}</h3>
    <h3>{{this.datePublished }} </h3>
    <img src="{{this.thumbnail}}">
    <li class="list-group-item"></li>
    <form id='searchForm' action="/Bookshelves/{{this.id}}" method="POST" class='form'>
    <button type="submit" data-id="{{this.id}}">Delete Book from your Shelf</button></form>
    <h4>id: {{this.id}}</h4> 
    {{/each}}

    
    <div id="results"></div>

